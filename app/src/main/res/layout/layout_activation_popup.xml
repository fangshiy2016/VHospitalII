<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:padding="40dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:background="@drawable/lay_activation_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_login_height"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/font_color"
            android:text="是否授权当前手机进行登陆"
            android:textSize="15sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view_actaivation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_login_height"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:text="授权"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/btn_login_select" />


        <TextView
            android:id="@+id/view_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_login_height"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorPrimary"
            android:text="取消"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/btn_solid_cycle"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>